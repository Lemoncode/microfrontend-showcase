{
  "name": "@microfrontend/clock",
  "version": "1.0.0",
  "description": "",
  "main": "clock.js",
  "types": "clock.d.ts",
  "scripts": {
    "start": "run-p typecheck:watch start:dev",
    "start:dev": "nodemon --watch ./config --exec \"webpack-dev-server --config ./config/webpack.standalone.dev.js\"",
    "build:standalone": "npm run typecheck && npm run build:standalone:prod",
    "build:standalone:dev": "rimraf build/standalone && webpack --config ./config/webpack.standalone.dev.js",
    "build:standalone:prod": "rimraf build/standalone && webpack -p --config ./config/webpack.standalone.prod.js",
    "build:microfrontend": "npm run typecheck && npm run build:microfrontend:prod",
    "build:microfrontend:dev": "rimraf build/microfrontend && webpack --config ./config/webpack.microfrontend.dev.js",
    "build:microfrontend:prod": "rimraf build/microfrontend && webpack -p --config ./config/webpack.microfrontend.prod.js",
    "typecheck": "tsc --pretty --noEmit",
    "typecheck:watch": "npm run typecheck -- --watch"
  },
  "keywords": [],
  "author": "Javier Calzado",
  "license": "MIT",
  "dependencies": {
    "emotion": "^10.0.27",
    "react": "^16.14.0",
    "react-dom": "^16.14.0"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-react": "^7.12.1",
    "@babel/preset-typescript": "^7.12.1",
    "@types/react": "^16.9.53",
    "@types/react-dom": "^16.9.8",
    "babel-loader": "^8.1.0",
    "copy-webpack-plugin": "^4.6.0",
    "css-loader": "^5.0.0",
    "eslint": "^7.12.0",
    "eslint-config-prettier": "^6.14.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.5",
    "file-loader": "^4.3.0",
    "html-webpack-plugin": "^3.2.0",
    "nodemon": "^2.0.6",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "rimraf": "^2.7.1",
    "style-loader": "^2.0.0",
    "typescript": "^3.9.7",
    "url-loader": "^4.1.1",
    "webpack": "^4.44.2",
    "webpack-bundle-analyzer": "^3.9.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0",
    "webpack-merge": "^4.2.2"
  }
}
